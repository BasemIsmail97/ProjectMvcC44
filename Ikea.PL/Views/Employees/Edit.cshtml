@model IKEA.PL.Models.ViewModels.Employee.EmployeeViewModel
@{
    ViewData["Title"] = "Employee Edit Action";
}

<div class="row justify-content-center align-content-center mt-3">
    <h1 class="col-8 my-4">Edit Employee</h1>
    <form method="post" asp-controller="Employees" asp-action="Edit" class="col-8">
        <div class="form-group mb-3">
            <label class="form-label">Name</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <label class="form-label">Email</label>
            <input asp-for="Email" class="form-control"  />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <label class="form-label">Address</label>
            <input asp-for="Address" class="form-control"  />
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <label class="form-label">Phone Number</label>
            <input asp-for="PhoneNumber" class="form-control"  />
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <label class="form-label">Age</label>
            <input asp-for="Age" type="number" class="form-control"  />
            <span asp-validation-for="Age" class="text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <label class="form-label">Hiring Date</label>
            <input asp-for="HiringDate" type="date" class="form-control"  />
            <span asp-validation-for="HiringDate" class="text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <label class="form-label">Salary</label>
            <input asp-for="Salary" type="number" class="form-control" />
            <span asp-validation-for="Salary" class="text-danger"></span>
        </div>
        <div class="form-group mb-3">
    <label class="form-label">Gender</label>
    <div>
        <input type="radio" asp-for="Gender" value="Male" checked /> Male
        <input type="radio" asp-for="Gender" value="Female" /> Female
    </div>
    <span asp-validation-for="Gender" class="text-danger"></span>
</div>

           
        <div class="form-group mb-3">
    <label class="form-label">EmployeeType</label>
    <div>
        <input type="radio" asp-for="EmployeeType" value="Fulltime" checked /> Fulltime
        <input type="radio" asp-for="EmployeeType" value="Parttime" /> Parttime
    </div>
    <span asp-validation-for="EmployeeType" class="text-danger"></span>
</div>
        <div class="form-group mb-3">
            <label class="form-label">Is Active</label>
            <input asp-for="IsActive" type="checkbox" checked />
            <span asp-validation-for="IsActive" class="text-danger"></span>
        </div>
        <div class="mt-4 m-auto">
            <input class="btn btn-success" type="submit" value="Save" />
            <a asp-controller="Employees" asp-action="Index" class="btn btn-outline-dark">Back to list</a>
        </div>
    </form>
</div>